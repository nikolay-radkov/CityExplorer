@model CityExplorer.Web.InputModels.CreateFeedbackInputModel
@{
    ViewBag.Title = "Create Feedback";
}

<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Create", "Feedback", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <hr />
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Title, new { placeholder = "Enter your feedback title here..." })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content, new { @class = "col-md-1 control-label" })

        <div class="col-md-11">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = "10" })
        </div>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Create Feedback" class="btn btn-primary btn-lg" />
    </div>
}


