@model CityExplorer.Web.ViewModels.CarouselViewModel

<div class="bs-example">
    <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="active item">
                <img src=@string.Format("/images/banner{0}.jpg", Model.FirstSlideNumber) />
                <div class="carousel-caption">
                    <h1>Explore</h1>
                    <p>Find new places.</p>
                </div>
            </div>
            <div class="item">
                <img src=@string.Format("/images/banner{0}.jpg", Model.SecondSlideNumber) />
                <div class="carousel-caption">
                    <h1>Visit</h1>
                    <p>Live the adventure.</p>
                </div>
            </div>
            <div class="item">
                <img src=@string.Format("/images/banner{0}.jpg", Model.ThirdSlideNumber) />
                <div class="carousel-caption">
                    <h1>Share</h1>
                    <p>Tell everyone about your impressions.</p>
                </div>
            </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>