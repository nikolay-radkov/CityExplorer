@model IEnumerable<CityExplorer.Web.ViewModels.PhotoViewModel>

<h1>Gallery</h1>

@if (Model.Count() != 0)
{
    <div class="row">

        @foreach (var photo in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb text-center">
                <div class="thumbnail">
                    <img src="@photo.Url" class="img-responsive" alt="photo" />
                </div>
            </div>
        }
    </div>
}
else
{
    <h3>No photos added!</h3>
}