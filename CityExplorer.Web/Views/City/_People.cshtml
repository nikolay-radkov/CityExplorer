@model IEnumerable<CityExplorer.Web.ViewModels.VipViewModel>
@{
    ViewBag.Title = "Famous People";
}
<div class="row">

    @if (Request.IsAuthenticated)
    {
        <div class="col-md-10 text-center">
            <h1 class="home-header">@ViewBag.Title</h1>
        </div>
        <div class="col-md-2 text-center">
            @Html.ActionLink("+", "Insert", "Vip", new { id = Url.RequestContext.RouteData.Values["id"] }, new { @class = "add-button" })
        </div>
    }
    else
    {
        <div class="col-md-12">
            <h1 class="home-header">@ViewBag.Title</h1>
        </div>
    }
</div>
@if (Model.Count() != 0)
{
    <div class="row">

        @foreach (var vip in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb text-center">
                <div class="thumbnail">
                    <strong>@vip.FirstName @vip.LastName</strong>
                    <br />
                    <em>@vip.Profession</em>
                    <img src="@vip.Photo" class="img-responsive" alt="@vip.LastName image" />
                </div>
            </div>
        }
    </div>
}
else
{
    <h3>No VIPs added!</h3>
}